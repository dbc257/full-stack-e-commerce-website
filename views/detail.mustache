    <!-- ============================================================= PRODUCT DETAIL PAGE ============================================================= -->
    <div class="book-detail page">
        <div class="container">
            {{#bookDetails}}
            <div class="primary-block clearfix">
                <div class="row">
                    <div class="col-sm-4">
                        <div >
                            <img src={{image}} class="img-responsive" alt="" />
                            <div class="fade"></div>
                        </div><!-- /.book-cover -->
                    </div><!-- /.col -->
                    <div class="col-sm-8">
                        <div class="book-detail-header">
                            <h2 class="book-title">{{title}}</h2>
                            <p class="book-author">By <span class="book-author-name">{{author}}</span></p>
                        </div><!-- /.detail-book-header -->
                        <div class="book-detail-body">
                            <div class="detail-cart-button row clearfix">
                                <div class="pull-left col-md-6 col-sm-5 col-xs-12">
                                    <div class="detail-book-price">
                                        <span class="price">${{price}}</span>
                                    </div><!-- /.detail-book-price -->
                                </div><!-- /.pull-left -->

                                <div class="pull-right col-md-6 col-sm-7 col-xs-12">
                                    <div class="row product-actions">
                                        <form method="POST" action="/cart">
                                        <input type="hidden" value="{{price}}" name="price" />
                                        <input type="hidden" value="{{id}}" name="product_id" />
                                        <button class="pull-center btn btn-primary btn-checkout"><i class="icon-plus fa fa-plus-circle"></i>Add to Cart</button>
                                        </form>  
                                    </div><!-- /.row -->      
                                </div><!-- /.pull-right --> 
                            </div><!-- /.detail-cart-button -->
                                <div class="clearfix">
                                </div>
                            <div class="product-description">
                                <h3>Description</h3>
                                <p>{{description}}</p>
                            </div><!-- /.product-description -->
                        </div><!-- /.book-detail-body -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.primary-block -->
            {{/bookDetails}}
        </div><!-- /.container -->
    </div><!-- /.book-detail-page -->
